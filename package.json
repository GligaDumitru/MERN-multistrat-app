    "express-mongo-sanitize": "^2.1.0",
    "faker": "^5.5.3",
    "helmet": "^4.6.0",
    "http-status": "^1.5.0",
    "joi": "^17.4.2",
    "mongoose": "^6.0.9",
    "morgan": "^1.10.0",
